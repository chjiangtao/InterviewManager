<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/add_new_interview_fragment_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6495ED">
        <TextView
            android:id="@+id/add_new_inter_view_fragment_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/add_new_interview_fragment_word_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_new_interview_fragment_camera"
            android:clickable="true"/>
        <TextView
            android:id="@+id/add_new_interview_fragment_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_new_interview_fragment_save"
            android:clickable="true"/>
        <TextView
            android:id="@+id/add_new_interview_fragment_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_new_interview_fragment_submit"
            android:visibility="gone"/>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:id="@+id/add_new_interview_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>